<h1>Listing items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Price</th>
      <th>Merchant</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.description %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= item.merchant.name %></td>
        <td><%= link_to 'Show', item %></td>
      </tr>
    <% end %>
  </tbody>
</table>
