<h1>Data Uploads</h1>

<table class="table">
  <thead>
    <tr>
      <th># Records</th>
      <th>Total Revenue</th>
      <th>Uploaded at</th>
      <th>Uploaded by</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
        <td><%= upload.num_records %></td>
        <td><%= number_to_currency(upload.total_revenue) %></td>
        <td><%= upload.created_at %></td>
        <td><%= upload.user.name unless upload.user.blank? %>
        <td><%= link_to 'Show', upload %></td>
        <td><%= link_to 'Destroy', upload, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'Upload New Data', new_upload_path %>
